{
    "name": "fa-fo-a/app-skeleton",
    "type": "project",
    "require": {
        "php": "^8.4",
        "symfony/flex": "^2",
        "symfony/skeleton": "^6.4",
        "symfony/runtime": "^6.4",
        "symfony/yaml": "^6.4",
        "symfony/dotenv": "7.3.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "achertovsky/phptools": "0.4.9",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "symfony/maker-bundle": "^1.61"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "vendor/bin/suggest-config",
            "composer symfony:recipes:install symfony/console",
            "composer symfony:recipes:install symfony/flex",
            "composer symfony:recipes:install symfony/framework-bundle",
            "composer symfony:recipes:install symfony/maker-bundle",
            "composer symfony:recipes:install symfony/routing"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
