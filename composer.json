{
    "name": "fa-fo-a/app-skeleton",
    "type": "project",
    "require": {
        "php": "^8.4",
        "symfony/flex": "^2",
        "symfony/skeleton": "^6.4",
        "symfony/runtime": "^6.4",
        "symfony/yaml": "^6.4",
        "symfony/dotenv": "^6.4",
        "symfony/console": "^6.4",
        "symfony/framework-bundle": "^6.4",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "guzzlehttp/guzzle": "^7.10",
        "symfony/psr-http-message-bridge": "^7.1",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.16",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.5",
        "symfony/uid": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "achertovsky/phptools": "0.4.9",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "symfony/maker-bundle": "^1.61"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core/",
            "Infrastructure\\": "src/Infrastructure/",
            "UseCase\\": "src/UseCase/",
            "UI\\": "src/UI/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "vendor/bin/suggest-config",
            "composer symfony:recipes:install symfony/console",
            "composer symfony:recipes:install symfony/flex",
            "composer symfony:recipes:install symfony/framework-bundle",
            "composer symfony:recipes:install symfony/routing",
            "rm -rf src/Controller src/Kernel.php"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
