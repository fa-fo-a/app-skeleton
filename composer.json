{
    "name": "fa-fo-a/app-skeleton",
    "type": "project",
    "require": {
        "php": "^8.4",
        "symfony/flex": "^2",
        "symfony/skeleton": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "achertovsky/phptools": "0.4.7",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "zenstruck/foundry": "^2.3",
        "symfony/maker-bundle": "^1.61"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [   
            "composer symfony:recipes:install"
        ]
    }
}
